<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/secondStatusBar</item>
        <item name="colorPrimaryDark">@color/secondAppbar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorControlNormal">@color/rippleColor</item>
        <item name="colorControlActivated">@color/accentColor</item>
        <item name="colorError">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
    </style>



    <style name="com.sudapay.largeFont" parent="@style/TextAppearance.AppCompat.Large">
        <item  name="android:fontFamily">sans-serif</item>
    </style>

    <style name="passwordButtonStyle" parent="@style/TextAppearance.AppCompat.Large">
        <item  name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/passButtonSize</item>
        <item name ="android:textColor">@color/mainFontColor</item>
    </style>

    <style name="com.sudapay.medFont" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="com.sudapay.smallFont" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="com.sudapay.inputLayoutFont" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/accentColor</item>
        <item name="android:textSize">@dimen/inputLayoutFontSize</item>
    </style>



    <style name="com.sudapay.appBarFont" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/mainFontColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>
